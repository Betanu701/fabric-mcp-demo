# Environment Configuration Template
# Copy this file to .env and fill in your Azure resource values

# Azure Resources
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_LOCATION=eastus

# Azure Key Vault
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Blob Storage
BLOB_STORAGE_URL=https://yourblob.blob.core.windows.net/
BLOB_STORAGE_CONTAINER=brand-assets

# Azure Cache for Redis
REDIS_URL=redis://your-redis.redis.cache.windows.net:6380
REDIS_PASSWORD=
REDIS_SSL=true

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Azure Cost Management
COST_MANAGEMENT_SCOPE=/subscriptions/{subscription-id}

# Azure Communication Services (optional, for email/SMS)
COMMUNICATION_SERVICES_CONNECTION_STRING=

# FoundryIQ Configuration
FOUNDRY_API_BASE=https://foundry.azure.com
FOUNDRY_API_KEY=

# Entra ID (optional, for authentication)
ENTRA_ENABLED=false
ENTRA_TENANT_ID=
ENTRA_CLIENT_ID=
ENTRA_CLIENT_SECRET=
ENTRA_AUTHORITY=https://login.microsoftonline.com/

# Application Settings
APP_NAME=Enterprise MCP
APP_VERSION=1.0.0
LOG_LEVEL=INFO
ENVIRONMENT=development

# Local Development
LOCAL_DEV_MODE=true
LOCAL_MOCK_SERVICES=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_NAME=Enterprise MCP

# Feature Flags
FEATURE_AUTO_DISCOVERY=true
FEATURE_COST_TRACKING=true
FEATURE_TELEMETRY=true
FEATURE_SETUP_WIZARD=true

# Security
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
GLOBAL_RATE_LIMIT_RPM=1000

# Budget Enforcement
DEFAULT_BUDGET_ENFORCEMENT=block
DEFAULT_BUDGET_THRESHOLD=90
